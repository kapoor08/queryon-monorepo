{
  "name": "@queryon/ui",
  "version": "0.2.0",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./button": {
      "import": "./dist/button.mjs",
      "require": "./dist/button.js",
      "types": "./dist/button.d.ts"
    },
    "./input": {
      "import": "./dist/input.mjs",
      "require": "./dist/input.js",
      "types": "./dist/input.d.ts"
    },
    "./card": {
      "import": "./dist/card.mjs",
      "require": "./dist/card.js",
      "types": "./dist/card.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup && npx tailwindcss -i ./src/index.css -o ./dist/output.css --minify",
    "dev": "tsup --watch",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "tailwind:build": "npx tailwindcss -i ./src/index.css -o ./dist/output.css --minify"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@shadcn/ui": "^0.0.4",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.544.0"
  },
  "publishConfig": {
    "@queryon:registry": "https://npm.pkg.github.com"
  }
}
